{
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest"
  },
  "testMatch": ["**/?(*.)+(spec|test).[jt]s?(x)"],
  "testPathIgnorePatterns": ["/node_modules/"],
  "collectCoverageFrom": [
    "src/**",
    "!src/Service/repository/dao/**",
    "!src/index.ts"
  ]
}
