{
  "name": "catalog-gql",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "generate": "gql-gen",
    "build": "tsc && npm run generate",
    "start": "node ./build/index.js",
    "test:integration": "npm run migrate:local && jest --config=jest.integration.config.json --passWithNoTests --forceExit --ci",
    "test:unit": "jest --config=jest.unit.config.json --passWithNoTests --forceExit --ci --coverage",
    "migrate:local": "knex migrate:latest --knexfile ./knexfile_local.js --env development && npx knex seed:run --env development --knexfile ./knexfile_local.js "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/typescript-resolvers": "^1.5.0",
    "@types/cookie": "^0.3.3",
    "@types/express": "^4.17.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.0.7",
    "prettier": "^2.4.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@apollo/federation": "^0.32.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "@graphql-codegen/typescript-operations": "^2.2.1",
    "@graphql-tools/schema": "^8.2.0",
    "@graphql-tools/utils": "^8.2.3",
    "@rross_llc/api-service-pack": "^0.2.5",
    "@types/graphql": "^14.5.0",
    "apollo-server": "^3.3.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-lambda": "^3.3.0",
    "aws-lambda": "^1.0.6",
    "aws-serverless-express": "^3.4.0",
    "body-parser": "^1.19.0",
    "cookie": "^0.4.0",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "date-fns": "^1.30.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gql-generator": "^1.0.13",
    "graphql": "^15.6.0",
    "husky": "^4.2.3",
    "jest": "^27.0.6",
    "knex": "^0.20.11",
    "lodash": "^4.17.21",
    "pg-promise": "^8.7.5",
    "ts-jest": "^25.2.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src",
      "!<rootDir>/src/Service/repository/dao"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build"
    }
  }
}
